{
  "name": "siyuan-note-master-cli",
  "version": "1.0.2",
  "description": "思源笔记命令行工具 - 支持导出标准 Markdown",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "snmcli": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:portable": "pkg . --targets node18-win-x64 --output portable/snmcli.exe",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "siyuan",
    "cli",
    "note",
    "markdown"
  ],
  "author": "SiYuan CLI Contributors",
  "license": "AGPL-3.0",
  "dependencies": {
    "axios": "^1.6.7",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "cosmiconfig": "^9.0.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/siyuan-note/siyuan-cli"
  },
  "bugs": {
    "url": "https://github.com/siyuan-note/siyuan-cli/issues"
  },
  "homepage": "https://github.com/siyuan-note/siyuan-cli#readme"
}
